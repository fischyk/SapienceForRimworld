<?xml version="1.0" encoding="utf-8" ?>
<FactionDefs>

  <FactionDef>
    <defName>Bonobon</defName>
    <label>bonobon tribe</label>
    <description>A tribe of Bonobons. After their great ape ancestors hijacked a spaceship to escape a human science lab, the Bonobons have spread across the known universe, settling down primatively.</description>
    <pawnsPlural>bonobons</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <raidCommonality>80</raidCommonality>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Alpha</leaderTitle>
    <startingGoodwill>
      <min>-40</min>
      <max>40</max>
    </startingGoodwill>
		<factionNameMaker>NamerFactionTribal</factionNameMaker>
        <pawnNameMaker>NamerPersonTribal</pawnNameMaker>
		<techLevel>Neolithic</techLevel>
		<backstoryCategory>Tribal</backstoryCategory>
		<hairTags>
			<li>Rural</li>
		</hairTags>
    <naturalColonyGoodwill>
      <min>-60</min>
      <max>10</max>
    </naturalColonyGoodwill>
    <pawnGroupMakers>
      <li>
        <options>
          <li>
            <selectionWeight>50</selectionWeight>
            <kind>Tribessub</kind>
          </li>
          <li>
            <selectionWeight>50</selectionWeight>
            <kind>Tribesbon</kind>
          </li>
          <li>
            <selectionWeight>50</selectionWeight>
            <kind>Alpha</kind>
          </li>

        </options>
      </li>
    </pawnGroupMakers>
    <homeIconPath>World/FactionHomes/DefaultHome</homeIconPath>
    <homeIconColor>(110,170,115)</homeIconColor>
  </FactionDef>
  
</FactionDefs>
